<%= form_for rolodex do |f| %>
  <p>Start %></p>
  <ul>
    <%= f.fields_for :referrals do |referral| %>
    <li>
      First Name: <%= referral.text_field :ref_first_name %><br><br>
      Last Name: <%= referral.text_field :ref_last_name %><br><br>
      Address Line 1: <%= referral.text_field :ref_address_line_one %><br><br>
      Address Line 2: <%= referral.text_field :ref_address_line_two %><br><br><br>
    </li>
    <% end %>
    <%= link_to 'add referral', rolodex %>    
  </ul>
  <%= f.submit %>
<% end %>

