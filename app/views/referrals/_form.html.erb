<%= form_for @referral do |f| %>
  <ul>
    <%= f.fields_for :referrals do |referral| %>
    <li>
      First Name: <%= referral.text_field :referral_first_name %><br><br>
      Last Name: <%= referral.text_field :referral_last_name %><br><br>
      Address Line 1: <%= referral.text_field :referral_address_line_one %><br><br>
      Address Line 2: <%= referral.text_field :referral_address_line_two %><br><br>
    </li>
    <% end %>
    <%= link_to 'Add Referral', referral %><br><br>    
  </ul>
  <%= f.submit %>
<% end %>